{
  "presets": [
    ["env", { "modules": false }],
    "es2015",
    "react",
    "stage-2"
  ],
  "passPerPreset": false,
  "plugins": [
    "react-hot-loader/babel", // Enables React code to work with HMR.
    "es6-promise",
    "transform-es2015-arrow-functions",
    "transform-react-inline-elements",
    "transform-runtime"
  ],
  "env": {
    "test": {
      "plugins": ["transform-es2015-modules-commonjs"]
    }
  }
}
